extends ../layouts/application.pug

block content
  a.nav-link(href='/labels/new')= t('views.labels.create')
  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
        th= t('views.labels.actions')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            a(href=route('labelEdit', {id: label.id}))= t('views.labels.edit')
            form(action=route('labelsDelete', {id: label.id}) method='post')
              input(name='_method' type='hidden' value='delete')
              input.btn.btn-link(type='submit' value=t('views.labels.delete'))