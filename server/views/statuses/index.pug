extends ../layouts/application.pug

block content
  a.nav-link(href='/statuses/new') Создать статус
  table.table.table-striped
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.statuses.createdAt')
        th= t('views.statuses.actions')
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
          td
            a(href=route('statusEdit', {id: status.id}))= t('views.statuses.edit')
            form(action=route('statusDelete', {id: status.id}) method='post')
              input(name='_method' type='hidden' value='delete')
              input.btn.btn-link(type='submit' value='Удалить')
